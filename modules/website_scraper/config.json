{
  "module": {
    "name": "website_scraper",
    "version": "1.1.0",
    "description": "Moduł do pobierania danych firm z witryn internetowych (targi, wystawy)"
  },
  "scraping": {
    "max_retries": 3,
    "timeout": 30,
    "delay_between_requests": 1.0,
    "delay_between_retries": 2.0,
    "filter_future_events": true
  },
  "sources": {
    "targikielce": {
      "enabled": true,
      "base_url": "https://www.targikielce.pl",
      "trades_api": "/api/modules/trades/search/1/60",
      "description": "Targi Kielce S.A. - kalendarz wydarzeń i lista wystawców"
    }
  },
  "database": {
    "source_table": "CRM.Event",
    "target_table": "CRM.Company",
    "parser_mapping": {
      "targikielce.pl": "targi_kielce"
    }
  },
  "mapping": {
    "default_country_id": 1,
    "default_industry_id": 1,
    "default_contact_data_source_id": 1
  }
}
